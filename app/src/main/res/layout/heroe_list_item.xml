<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/card_item_white"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/hero_list_item_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        fresco:roundedCornerRadius="20dp"
        fresco:roundBottomStart="false"
        fresco:roundBottomEnd="false"
        fresco:actualImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/app_icon"/>

    <TextView
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:id="@+id/hero_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="24sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="ZELIFACIO" />

    <TextView
        android:id="@+id/hero_list_item_description"
        android:layout_width="match_parent"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="18sp"
        android:ellipsize="end"
        android:text="Zelifaio Ã© um homem galinha mutante" />


</LinearLayout>